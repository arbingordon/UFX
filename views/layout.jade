            li.nav-item
              a.nav-link(href='/listings/new') Add New Listing
            li.nav-item
              a.nav-link(href='/users/settings') User Control Panel
            li.nav-item
              a.nav-link(href='/users/logout') Logout
            span.navbar-text Welcome #{user.name}
