doctype html
html
  head
    title= title
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")
    <link rel="shortcut icon" type="image/png" href="/gator.png?v=2"/>
    //- link(rel='stylesheet', href='https://bootswatch.com/4/materia/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-5.py-1
      a.navbar-brand(href="/") University Exchange
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
          
      div.collapse.navbar-collapse(id='navbarSupportedContent')
          if (!user)
            ul.nav.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href='/users/login') Login
              li.nav-item
                a.nav-link(href='/users/register') Register
          if (user)
            ul.nav.navbar-nav
              li.nav-item
                a.nav-link.btn.btn-secondary.text-white.p-1(href='/listings/new')
                  | New Listing
                  i.material-icons.ml-2.align-bottom add_circle_outline
            ul.nav.navbar-nav.ml-auto
              li.nav-item.dropdown
                a.nav-link.dropdown-toggle(href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") 
                  img.rounded-circle.mr-2.profile-picture.extra-small(src=user.image)
                  | #{user.name}
                .dropdown-menu.dropdown-menu-right(aria-labelledby="navbarDropdown")
                  a.dropdown-item.px-3(href="/users/settings") 
                    i.material-icons.mr-2.align-bottom.text-secondary settings
                    | Control Panel
                  .dropdown-divider
                  a.dropdown-item.px-3(href="/users/logout") 
                    i.material-icons.mr-2.align-bottom.text-secondary remove_circle_outline
                    | Logout

    div.container
      div.content
        block content

