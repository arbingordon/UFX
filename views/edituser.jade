extends layout

block content
  .container
    form.form-signin.shadow-sm.rounded.p-5.bg-white.mt-3(role='form', action="/users/edit/"+user.id+"?_method=PUT", method="post", enctype="multipart/form-data")
      h2.form-signin-heading.mb-4 Edit Account
      .form-group
        label(for='inputName') Name
        input.form-control(type='text', name="newUser[name]", id="inputName", placeholder='Your Name', value=user.name)
      .form-group
        label(for='inputUsername') Email
        input.form-control(type='text', name="newUser[email]", id="inputEmail", placeholder='Your Email')
      .form-group
        label(for='inputUsername') Username
        input.form-control(type='text', name="newUser[username]", id="inputUsername", placeholder='Your Username', value=user.username)
      .form-group
        label(for='inputPassword') Password
        input.form-control(type='password', name="newUser[password]", id="inputPassword", placeholder='Your Password')
      .form-group
            label(for="file") Profile Picture 
            .custom-file.mb-3 
              input.custom-file-input(type='file', name="file", id="file")
              label.custom-file-label(for="file") Change Image     
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Update
  script.
    $('#file').on('change',function(){
        //get the file name
        var fileName = $(this).val().replace("C:\\fakepath\\", "");
        //replace the "Choose a file" label
        $(this).next('.custom-file-label').html(fileName);
    });
